#!/bin/sh

WIFI_ACTION="$(printf "%b\n" "Down\nUp" | dmenu -p "WiFi:")"
WIFI_STATUS="$(connmanctl services)"

case "$WIFI_ACTION" in
    Down) [ -n "$WIFI_STATUS" ] && connmanctl disable wifi && echo "Network Disconnecting ..." "ðŸ˜ƒ"> $XNOTIFY_FIFO || printf "Already Disconnected%s\n" " ðŸ˜ƒ" > $XNOTIFY_FIFO ;;
    Up) [ -z "$WIFI_STATUS" ] && connmanctl enable wifi && sleep 0.5 && echo "Network Connecting ..." "ðŸ˜’" > $XNOTIFY_FIFO || printf "Already Connected%s\n" " ðŸ˜’" > $XNOTIFY_FIFO ;;
esac

sleep 3
sigdwmblocks 6


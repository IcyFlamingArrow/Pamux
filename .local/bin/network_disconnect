#!/bin/sh

var1=$(printf "%b\n" "Down\nUp" | dmenu -p "WiFi:")

case "$var1" in
    Down) [ -n "$var1" ] && connmanctl disable wifi && echo "Network Disconnected" "ðŸ˜ƒ"> $XNOTIFY_FIFO || printf "Already Disconnected%s\n" "ðŸ˜ƒ" > $XNOTIFY_FIFO ;;
    Up) [ -n "$var1" ] && connmanctl enable wifi && echo "Network Connected" "ðŸ˜’" > $XNOTIFY_FIFO || printf "Already Connected%s\n" "ðŸ˜’" > $XNOTIFY_FIFO ;;
esac

sleep 1
sigdwmblocks 6

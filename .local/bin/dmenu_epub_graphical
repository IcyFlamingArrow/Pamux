#!/bin/sh

ebook="$(find /home/rabbitbabbit/Documents/Ebook/* -type f)"
ebookedit="$(echo "${ebook##*/}" | dmenu -p "Ebook to Read" -g 3 -l 3)"

[ -z "$ebookedit" ] && exit 1


EBOOKVIEWER="$(printf "Visual\nTerminal" | dmenu)"

[ -z "$EBOOKVIEWER" ] && exit 1

case $EBOOKVIEWER in
    Visual) EBOOKVIEWER="zathura" ;;
    Terminal) EBOOKVIEWER="st -e epy" ;;
esac

$EBOOKVIEWER "$HOME/Documents/Ebook/$ebookedit"

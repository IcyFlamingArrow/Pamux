    Mod4 + BackSpace

########
# Audio
########

"volume_control toggle"
    XF86AudioMute

"volume_control lower"
    XF86AudioLowerVolume

"volume_control raise"
    XF86AudioRaiseVolume


#######
# Cmus
#######

"cmus-remote --prev"
    XF86AudioPrev

"cmus-remote -u"
    XF86AudioPlay

"cmus-remote --next"
    XF86AudioNext

"cmus-remote --volume -10%"
    F7

"cmus-remote --volume +10%"
    F8


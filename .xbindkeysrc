# vim:filetype=conf

"$BROWSER"
    Mod4 + Shift + w

"anki.sh"
    Mod4 + a

"flash_window"
    Mod4 + w

####################
# Terminal programs
####################

"$TERMINAL"
    Mod4 + Return

"$TERMINAL -e calcurse"
    Mod4 + c

"$TERMINAL -e $FILE_MANAGER"
    Mod4 + Shift + f

"$TERMINAL -e htop"
    Mod4 + Shift + h

"$TERMINAL -e ncmpcpp"
    Mod4 + n

"$TERMINAL -e neomutt"
    Mod4 + Shift + n

"$TERMINAL -e dijo"
    Mod4 + Shift + j

"$TERMINAL -e termdown 20m"
    Mod4 + Shift + t

###################
# Dmenu and Scripts
###################

"dmenu_run"
    Mod4 + d

"dmenu_dictionary"
    Mod4 + Shift + d

"dmenu_epub_graphical"
    Mod4 + e

"network_disconnect"
    Mod4 + i

"passmenu"
    Mod4 + p

"mpv_video"
    Mod4 + v

"dmkill"
    Mod4 + Shift + k 

"dmenuunicode"
    Mod4 + grave

"logoff"
    Mod4 + BackSpace

########
# Audio
########

"volume_control toggle"
    XF86AudioMute

"volume_control lower"
    XF86AudioLowerVolume

"volume_control raise"
    XF86AudioRaiseVolume


#######
# Cmus
#######

"mpc prev"
    XF86AudioPrev

"mpc toggle"
    XF86AudioPlay

"mpc next"
    XF86AudioNext

"mpc volume -10"
    F7

"mpc volume +10"
    F8

###############
# Miscellaneous
###############

"brightnessctl set 750-"
    XF86MonBrightnessDown

"brightnessctl set 750+"
    XF86MonBrightnessUp

"screenshot Full"
    Print

"screenshot Selection"
    Shift + Print

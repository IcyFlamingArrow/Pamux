    Mod4 + d

"dmenu_dictionary"
    Mod4 + Shift + d

"dmenu_epub_graphical"
    Mod4 + e

"network_disconnect"
    Mod4 + i

"dmkill"
    Mod4 + Shift + k 

"dmenuunicode"
    Mod4 + grave

